# providerdir defines where provider libraries will be installed 
# (@PROVIDERDIR@ is set by the configure script). 
providerdir = @PROVIDERDIR@

###############################################################################
AM_CFLAGS = -Wall

AM_CPPFLAGS = \
    -D_GNU_SOURCE \
	-DDEBUG \
    -DSBLIM_DEBUG\
    -D_COMPILE_UNIX \
    -I${top_srcdir}/include/ \
    -I${top_srcdir}/resource-access/ 


################################################################################
provider_LTLIBRARIES = \
    libcmpiLinux_SambaElementConformsToProfile.la 

libcmpiLinux_SambaElementConformsToProfile_la_LDFLAGS = \
    -avoid-version

libcmpiLinux_SambaElementConformsToProfile_la_SOURCES = \
    Linux_ElementConformsToProfile_Resource.c \
    Linux_SambaElementConformsToProfile.c
       
noinst_HEADERS = \
    Linux_ElementConformsToProfile_Resource.h

libcmpiLinux_SambaElementConformsToProfile_la_LIBADD = \
    ${top_builddir}/resource-access/libRaToolsSmb.la
